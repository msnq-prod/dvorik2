# Database Configuration
DB_URL=mysql+asyncmy://user:password@mysql:3306/marmeladny_dvorik?charset=utf8mb4
DB_URL_SYNC=mysql+pymysql://user:password@mysql:3306/marmeladny_dvorik?charset=utf8mb4

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Telegram Bots
TELEGRAM_MAIN_BOT_TOKEN=your_main_bot_token_here
TELEGRAM_AUTH_BOT_TOKEN=your_auth_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_username

# Admin Configuration
FIRST_SUPERADMIN_TG_ID=123456789

# Broadcast Settings
DEFAULT_BROADCAST_RATE_PER_MINUTE=25

# Security
INTERNAL_API_KEY=your_secure_internal_api_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Timezone
TZ=Asia/Vladivostok

# Application Settings
DEBUG=False
API_HOST=0.0.0.0
API_PORT=8000

# Webhook URLs (без trailing slash)
WEBHOOK_BASE_URL=https://your-domain.com
WEBHOOK_PATH_MAIN=/webhooks/main-bot
WEBHOOK_PATH_AUTH=/webhooks/auth-bot

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TIMEZONE=Asia/Vladivostok

# Birthday Task Configuration
BIRTHDAY_CHECK_HOUR=9
BIRTHDAY_CHECK_MINUTE=0

# Subscription Cache TTL (seconds)
SUBSCRIPTION_CACHE_TTL=60

# Code Generation
CODE_PREFIX=
CODE_LENGTH=7

# Rate Limiting
TELEGRAM_RATE_LIMIT_PER_MINUTE=25
TELEGRAM_RETRY_BACKOFF_FACTOR=2
TELEGRAM_MAX_RETRIES=3

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# Logging
LOG_LEVEL=INFO
